/* pages/comment/comment.wxss */
page, .container {
  height: 100%;
  background: #f4f4f4;
}

.post-comment {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  padding: 30rpx;
}

.post-comment .input-box {
  height: 337.5rpx;
  width: 690rpx;
  position: relative;
  background: #fff;
}

.post-comment .input-box .content {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  background: #fff;
  font-size: 29rpx;
  color: #333;
  height: 300rpx;
  width: 650rpx;
  padding: 20rpx;
}

.post-comment .input-box .count {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  display: block;
  height: 30rpx;
  width: 50rpx;
  font-size: 29rpx;
  color: #999;
}

.post-comment .btns {
  position: absolute;
  bottom: 40rpx;
  height: 108rpx;
}

.post-comment .close {
  float: left;
  height: 108rpx;
  line-height: 108rpx;
  text-align: left;
  color: #666;
  padding: 0 30rpx;
}

.post-comment .post {
  float: right;
  height: 108rpx;
  line-height: 108rpx;
  text-align: right;
  padding: 0 30rpx;
}


.ThreadAdd{
font-size: 28rpx;
}
.ThreadAdd .threadtitle{
height: 50rpx;   
width:90%;
padding:20rpx 5%;
color: #777;
border-bottom:1rpx solid #ddd;


}

.ThreadAdd .threadmessage{
width:90%;
padding:5%;
border-radius:20rpx;
margin-bottom:20rpx;
height:100rpx;

}
.selectimg{
width:150rpx;
height:150rpx;
border:2rpx #cccccc solid;
margin:10rpx 10rpx 0;
color:#cccccc;
font-size:150rpx;
line-height:120rpx;
text-align:center;
float:left;
margin-left:40rpx;

}

.previewImg{margin-left:30rpx;}
.previewImg .item{
    float:left;
    align-items: center;
    width: 150rpx;
    height: 150rpx;
    border: 1px #cccccc dashed;
    border-radius:10rpx;
    margin-left:10rpx;
    margin-right:10rpx;
    margin-top:12rpx;
    font-size: 28rpx;
    position: relative;
    overflow: hidden;

}
.previewImg .item .img{
width:120rpx;
    height:120rpx;
    margin:0 auto;
    display:block;
    padding:16rpx;
}
.delpic .bg{
    position: absolute;
    background: #000000;
    width: 150rpx;
    height: 150rpx;
    opacity: 0.5;
}
.delpic .text{
    position: absolute;
    left:52rpx;
    top:32rpx;
    color:#ffffff;
    font-size:85rpx;
    z-index: 1;
}
@import "../template/dishlist_temp.wxss";

.container{
  justify-content: flex-start;
}

.nav_stairs{  
  width: 100%;  
  height: 95rpx;
  background: #fcf185;
  justify-content: space-around; 
  align-items:center;
  display: flex;
  
}  

 /*楼层样式*/
.nav_stairs_items{  
  height:60rpx; 
  width: 115rpx;
  line-height: 50rpx; /*垂直居中*/
  font-size: 35rpx;  
  background-color: #fcf185; 
  text-align: center;
  
 
}  

/*楼层被选中时*/  
.active{ 
  height: 60rpx; 
  width: 115rpx;
  line-height: 50rpx; /*垂直居中*/
  font-size: 35rpx;
  background: #fcf185;
  color:#F17c67; 
  border-radius: 10rpx;
  text-align: center;
  font-weight: bold;

}  

.nav_window{
 width: 100%;
height: 90rpx;
background: #FFFAF0;
}

/*窗口样式*/
.nav_window_items{
  display: inline-block;
  background:#fffaf0;
  border-top:6rpx solid #F17c67;
  border-bottom: 6rpx solid #F17c67;
  border-left: 6rpx solid #F17c67;
 
  height: 60rpx; 
  width: 160rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 70rpx;
  

}

/*窗口被选中时*/ 
.activeWindow{
  display: inline-block;
  background: #F17c67;
  border-top:6rpx solid #F17c67;
  border-bottom: 6rpx solid #F17c67;
  border-left: 6rpx solid #F17c67;

  height: 60rpx; 
  width: 160rpx;
  text-align: center;
  color: #fffaf0;
  font-size: 28rpx;
  line-height: 70rpx;
  
}
.scrollwindow{
    width: 100%;
    white-space: nowrap;
    height:70rpx;
  }


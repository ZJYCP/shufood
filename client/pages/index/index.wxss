/*-------------热品推荐-------------*/

.every_title {
  display: inline-block;
  width: 100%;
  height: 50rpx;
  padding: 12rpx 0rpx; 
  background: #fff;
  border-bottom: 3px #f5f5f5 solid;
}

.every_text {
  color: #9c9c9c;
  font-style: black;
  font-size: 16px;
  vertical-align: middle;
  margin-left: 15rpx;
  margin-top: 10rpx;
}


/* 底部横线 */
.am-bottom {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  position: absolute;
  text-align: center;
  width: 100%;
}
.bottomtitle{
  line-height: 20px;
  font-size: 0.8rem;
  color: #999999;
}
.am-bottom view:after, .am-bottom view:before {
  position: absolute;
  top: 50%;
  background: #ddd;
  content: "";
  height: 1px;
  width: 20%;
}
.am-bottom view:before {
  left: 0rpx;
}
.am-bottom view:after {
  right: 0rpx;
}

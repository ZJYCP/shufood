@import '../template/dishlist_temp.wxss';

/*------------搜索框样式------------*/

.Search_all {
  background-color: #fcf185;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  top: 0;
  right: 0;
  left: 0;
  z-index: 999;
}

.input_box {
  display: inline-block;
  vertical-align: top;
  background-color: #fff;
  height: 60rpx;
  width: 600rpx;
  border-radius: 30rpx;
  margin-left: 55rpx;
}

.search_icon {
  margin: 0 20rpx 0 48rpx;
  vertical-align: middle;
}

.input_text {
  display: inline-block;
  vertical-align: middle;
  height: 60rpx;
  width: 75%;
}

.search_text {
  display: inline-block;
  vertical-align: middle;
  margin-left: 40rpx;
  color: #757479;
  font-size: 38rpx;
}

/*-------------菜品框样式-------------*/

.cuisine_all {
  width: 100%;
  height: 150rpx;
  overflow: hidden;
  padding: 40rpx 0rpx 30rpx 0rpx;
  white-space: nowrap;
  background: #fff;
}

.cuisine_box {
  width: auto;
  height: 150rpx;
  overflow: hidden;
}

.item_list {
  width: 160rpx;
  height: auto;
  margin-left: 20rpx;
  display: inline-block;
  text-align: center;
}

.item_pic {
  display: inline-block;
  width: 105rpx;
  height: 100rpx;
}

.item_text {
  color: #9f9f9f;
  font-size: 14px;
}

/*-------------今天吃啥-------------*/

.whattoeat_all {
  display: inline-block;
  width: 750rpx;
}

.whattoeat_box {
  display: inline-block;
  width: 750rpx;
  height: 200rpx;
}

.modal {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    background: rgba(0, 0, 0, .5);
    z-index:1000;
}

